<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:id="@+id/vehicleMain"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginEnd="6dp">

        <View
            android:id="@+id/whiteDot"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/white_dot" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/nameLookLike"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:text="Sarvesh"
            android:layout_weight="0.9"
            />

        <TextView
            android:id="@+id/vehNoLookLike"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="RJ 13 SB 4733"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_weight="1"
            />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/mobileNoLookLike"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            tools:text="8553469810"
            android:textStyle="bold"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/modelNameLookLike"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Lamborghini Veneno"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_weight="1"
            />

    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="8.0"
        >

        <ImageView
            android:id="@+id/ivEdit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/ic_action_edit" />

    </LinearLayout>



</LinearLayout>